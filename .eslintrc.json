{
  "extends": [
    "pk/eslint-browser",
    "preact"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "ignorePatterns": "build/**",
  "rules": {
    "no-prototype-builtins": "off",
    "semi": [
      "error",
      "always",
      { "omitLastInOneLineBlock": true }
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "react/jsx-max-props-per-line": [1, { "maximum": 1, "when": "always" }]
  }
}